{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node16",
    "isolatedModules": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "./dist",
    "pretty": true,
    "preserveWatchOutput": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
