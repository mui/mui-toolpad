{
  "name": "@toolpad/core",
  "version": "0.6.0",
  "author": "Toolpad Team",
  "description": "Dashboard framework powered by MUI.",
  "main": "./node/index.js",
  "module": "./index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js",
      "require": "./node/index.js"
    },
    "./*": {
      "types": "./*/index.d.ts",
      "import": "./*/index.js",
      "require": "./node/*/index.js"
    }
  },
  "keywords": [
    "react",
    "mui",
    "toolpad",
    "internal tools",
    "crud",
    "admin",
    "dashboard"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mui/mui-toolpad.git",
    "directory": "packages/toolpad-core"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mui/mui-toolpad/issues"
  },
  "homepage": "https://github.com/mui/mui-toolpad#readme",
  "scripts": {
    "clean": "rimraf build",
    "prebuild": "pnpm clean",
    "build": "pnpm build:node && pnpm build:stable && pnpm build:types && pnpm build:copy-files && pnpm esmify",
    "esmify": "rm -rf ./build/*/package.json",
    "build:node": "node ../../scripts/build.mjs node",
    "build:stable": "node ../../scripts/build.mjs stable",
    "build:copy-files": "node ../../scripts/copyFiles.mjs",
    "build:types": "tsc -b tsconfig.build.json",
    "predev": "pnpm clean",
    "dev": "concurrently \"pnpm build:stable --watch\" \"pnpm build:types --watch --preserveWatchOutput\"",
    "check-types": "pnpm build:types && tsc --noEmit",
    "test": "vitest run --coverage",
    "test:dev": "vitest",
    "test:browser": "vitest run --browser.enabled",
    "test:browser:dev": "vitest --browser.enabled"
  },
  "dependencies": {
    "@babel/runtime": "^7.25.6",
    "@mui/lab": "6.0.0-beta.9",
    "@mui/utils": "6.1.0",
    "@toolpad/utils": "workspace:*",
    "client-only": "^0.0.1",
    "invariant": "2.2.4",
    "path-to-regexp": "6.2.2",
    "prop-types": "15.8.1"
  },
  "devDependencies": {
    "@mui/icons-material": "6.1.0",
    "@mui/material": "6.1.0",
    "@types/invariant": "2.2.37",
    "@types/prop-types": "15.7.12",
    "@types/react": "18.3.5",
    "@types/react-dom": "18.3.0",
    "@types/sinon": "^17.0.3",
    "@vitest/browser": "2.1.1",
    "next": "^14.2.8",
    "next-router-mock": "^0.9.13",
    "playwright": "^1.46.1",
    "sinon": "^18.0.1",
    "vitest": "2.1.1"
  },
  "peerDependencies": {
    "@mui/icons-material": "5 - 6",
    "@mui/material": "5 - 6",
    "next": "^14",
    "react": "^18"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "directory": "build"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
