{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "./dist",
    "allowJs": true,
    "pretty": true,
    "preserveWatchOutput": true,
    "types": ["node", "react"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/index.ts"],
  "exclude": ["dist"]
}
