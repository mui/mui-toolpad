{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": false,
    "outDir": "./dist",
    "pretty": true,
    "preserveWatchOutput": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "target": "es2020",
    "types": ["react", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/index.ts"],
  "exclude": ["dist", "src/**/*.spec.*"]
}
