{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "paths": {
      // TODO: remove when typescript module resolution supports package exports. (v5.0 with moduleResolution: 'bundler')
      "@mui/toolpad-core": ["../toolpad-core/dist"],
      "@mui/toolpad-core/path": ["../toolpad-core/dist/path"],
      "@mui/toolpad-core/objectKey": ["../toolpad-core/dist/objectKey"],
      "@mui/toolpad-core/types": ["../toolpad-core/dist/types"]
    },
    "module": "esnext",
    "alwaysStrict": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "target": "ES2020",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
