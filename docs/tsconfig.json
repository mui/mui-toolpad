{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "allowJs": true,
    "isolatedModules": true,
    /* files are emitted by babel */
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["react", "node"],
    "incremental": true,
    "noImplicitAny": true,
    "jsx": "preserve"
  },
  "include": [
    "docs-env.d.ts",
    "pages/**/*",
    "src/**/*",
    "data/**/*",
    "next.config.mjs",
    "../packages/toolpad-core/src/internals"
  ],
  "exclude": ["docs/.next", "docs/export"]
}
