{
  "compilerOptions": {
    "baseUrl": "./",

    "module": "node16",
    "target": "es2022",
    "moduleResolution": "node16",
    "isolatedModules": true,
    "resolveJsonModule": true,

    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",

    "types": ["node"]
  },
  "include": ["./**/*.ts"]
}
